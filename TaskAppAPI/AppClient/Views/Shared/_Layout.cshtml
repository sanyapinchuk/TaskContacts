
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewData["Title"] - ContactApp</title>		
        <meta name="description" content="@ViewData["Description"]">	
        <link rel="icon" href="images/logo/logo.ico" type="image/x-icon">
	    <link rel="stylesheet" href="css/styles.css">
	    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200&display=swap" rel="stylesheet">
	    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200&display=swap" rel="stylesheet">
	    <script src="https://kit.fontawesome.com/71471d07af.js" crossorigin="anonymous"></script>	  
        
    </head>
	<body>
        <div id="body">
            <div class="header_top">			
                <div class="header_contacts">			 
                    <a href=""><img id="logotype" src= "images/logo/logo.png" alt="no image"></a>	
                    <h2 id="project_name">Менеджер контактов</h2>
                </div>
            </div>            
            
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <div id="arrow_up">
                <i class="fas fa-arrow-up" id="arrow_id"></i>
            </div>
            
            <div class="last_box">
                <div class="last_line">
                    ContactApp
                </div>
                <div class="contact_line">				
                    <a href="#"><i class="fab fa-telegram"></i></a>
                    
                    <a href="tel:0000000"><i class="fas fa-phone-alt"></i></a>
                    <a href="example.@@gmail.com"><i class="fas fa-at"></i></a>
                </div>
            </div>
        </div>

        @RenderSection("postBody",false)

        <script src="js/site.js"></script>  
	</body>
</html>