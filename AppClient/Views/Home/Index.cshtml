@model IEnumerable<Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1 id="page_info">Ваши контакты</h1>


<div id="contacts_list">    
    @foreach (var item in Model) {
        <div class="contact_block">
            <div class="contact_icons_control">
                <i class="contact_edit fas fa-user-edit"></i>
                <i class="contact_delete fas fa-trash"></i>
            </div>
            <span class="contact_id">@Html.DisplayFor(modelItem => item.Id)</span>
            <div class="contact_name">@Html.DisplayFor(modelItem => item.Name)</div>
            
            <a class="contact_phone" href="tel:0000">@Html.DisplayFor(modelItem => item.MobilePhone)</a>
            <ul class="add_info_block">
                <li class="contact_job">@Html.DisplayFor(modelItem => item.JobTitle)</li>
                <li class="contact_birth">@Html.DisplayFor(modelItem => item.BirthDate)</li>
            </ul>
            <div class="more_info">
                <div class="box_more">
                    <div class="more">
                        Развернуть
                        <img src="images/icons/vnis_new.svg" alt="">
                    </div>
                    <div class="less">
                        Свернуть
                        <img src="images/icons/vverh_new.svg" alt="">
                    </div>
                </div>						
            </div>
        </div>
    }
</div>
<div id="addContact" class="button add">
    Добавить еще
</div>


@section postBody{
    <div id="pop-order">			
		<div class="order-all" id="order-all">												
		</div>
		<div id="add_place">
			<div class="external_order" id="external_order">					
				<form id= "order-form" name="order_form" class="order" role="form" data-action-url="" data-method-type="">			
					<i id="icon-close" class="fas fa-times"></i>	
					<div  id="span">
						Изменить контакт
					</div>                    
                    <input id="form_input_id" type="hidden" name="Id" required value="">					
                    <input id="form_input_name" type="text" name="Name" class="order-control" placeholder="Имя *">
                    <input id="form_input_phone" type="tel" name="MobilePhone" class="order-control" placeholder="Телефон *">
                    <input id="form_input_job" type="text" name="JobTitle" class="order-control" placeholder="Должность">
                    <input id="form_input_birth" type="tel" name="BirthDate" class="order-control" placeholder="Дата рождения">
					<button id="sendForm" type="submit" style="cursor: pointer;">Изменить</button>
				</form>	
			</div>
		</div>	
	</div>
		
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"></script>
        
    <script src="js/formIteraction.js"></script>
    <script src="js/formHandler.js"></script>

}